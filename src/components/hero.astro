---
import { Image } from 'astro:assets'
import poolHeroBg from '@/assets/images/hero-section-background-image.png'
import pinkFlamingo from '@/assets/images/3d-pink-flamingo.png'
import yellowStar from '@/assets/images/3d-yellow-star.png'
---

<section
    class='pb-84 relative z-10 h-[85vh] min-h-[660px] w-full justify-center overflow-x-clip bg-[#12C4E7] pt-[126px] md:pt-[280px]'>
    <div
        class='float-animation-star absolute left-[-150px] top-[55%] z-0 flex w-full transform sm:top-[80%]'
        style='top: min(75%, 700px);'>
        <Image
            class='h-full w-[33%] min-w-[300px] sm:min-w-[440px]'
            src={yellowStar}
            quality={100}
            sizes='100vw'
            loading='eager'
            alt='Screenshot of a yellow star floaty'
        />
    </div>

    <div class='relative z-10 mx-3 flex flex-col items-center justify-center gap-4 lg:pt-[64px]'>
        <h2 class='font-raleway relative z-10 text-center text-[22px] font-extrabold text-white lg:text-[48px]'>
            Nov 9 - 17 | Bangkok
        </h2>
        <h1
            class='font-raleway relative z-10 text-nowrap text-center text-[38px] font-extrabold leading-[100%] text-white sm:text-[38px] md:text-[80px] lg:text-[126px]'>
            Dive into Devcon
        </h1>

        <p
            class='md:text- relative z-10 m-auto mb-4 w-[90vw] max-w-[560px] text-center text-[16px] text-white sm:mb-4 sm:text-[16px] md:text-[26px] lg:mb-12'>
            Make waves with us at the ultimate Web3 gathering - an unforgettable experience awaits
        </p>
        <div
            class='relative z-10 mx-4 flex w-full flex-col items-center justify-center gap-2 text-nowrap text-base font-semibold md:w-[224px]'>
            <a
                href='https://form.asana.com/?k=Qx1HYy3c8KcgfHyWszZnyA&d=1207858482725448'
                class='relative z-10 mx-auto flex w-full items-center justify-center rounded-full bg-[#FF7056]/100 px-8 py-3.5 text-xl font-normal text-white'>
                Sponsor an event
            </a>
            <a
                href='https://calendly.com/partywithpool'
                class="relative z-10 mt-6 text-center font-['Inter'] text-lg font-semibold leading-7 text-white">
                Book a call
            </a>
        </div>
    </div>

    <div
        class='float-animation-flamingo absolute right-[-380px] z-0 transform sm:top-[40%] md:right-[-250px] md:top-[40%] lg:top-[44%]'
        style='top: min(60%, 600px);'>
        <Image
            class='relative h-full w-[50%] min-w-[290px] sm:w-[90%] md:w-[100%] lg:w-[100%]'
            src={pinkFlamingo}
            quality={100}
            sizes='100vw'
            loading='eager'
            alt='Screenshot of a pink floaty flamingo'
        />
    </div>
</section>

<div class='-mt-px'>
    <Image src={poolHeroBg} alt='pool background' quality={100} class='w-full' />
</div>

<style>
    @keyframes floatStar {
        0% {
            transform: translateY(0) rotate(0deg);
        }
        50% {
            transform: translateY(-14px) rotate(3deg);
        }
        100% {
            transform: translateY(0) rotate(0deg);
        }
    }

    @keyframes floatFlamingo {
        0% {
            transform: translateY(0) rotate(0deg);
        }
        50% {
            transform: translateY(-23px) rotate(-5deg);
        }
        100% {
            transform: translateY(0) rotate(0deg);
        }
    }

    .float-animation-star {
        animation: floatStar 5s ease-in-out infinite;
        animation-delay: 0s;
    }

    .float-animation-flamingo {
        animation: floatFlamingo 5s ease-in-out infinite;
        animation-delay: 0.5s;
    }
</style>
