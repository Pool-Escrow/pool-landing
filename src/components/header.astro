<header class='sticky top-0 w-full transition-colors duration-300' id='main-header'>
    <nav class='container flex items-center justify-between py-5 align-middle lg:py-16'>
        <a href='/' class='font-logo text-5xl font-bold text-white'> pool </a>
        <a href='https://app.poolparty.cc' class='rounded-full bg-zinc-100 px-8 py-3.5 text-xl font-medium text-black'>
            Get started
        </a>
    </nav>
</header>

<script>
    const header = document.getElementById('main-header')

    function updateHeaderBackground() {
        if (window.scrollY > 0) {
            header?.classList.add('bg-black', 'bg-opacity-20')
        } else {
            header?.classList.remove('bg-black', 'bg-opacity-20')
        }
    }

    // Refresh on load
    updateHeaderBackground()

    // Update on scroll
    window.addEventListener('scroll', updateHeaderBackground)
</script>
